<project name="sitemesh-website" default="generate">

  <taskdef name="sitemesh"
           classname="org.sitemesh.ant.SiteMeshTask"
           classpath="lib/sitemesh-3.1.0-SNAPSHOT.jar"/>

  <target name="generate" description="Generate web site">
    <mkdir dir="docs"/>
    <copy todir="docs">
      <fileset dir="src">
        <exclude name="decorators/**"/>
      </fileset>
    </copy>
    <sitemesh srcdir="src"
              config="sitemesh.xml"
              destdir="docs"
              includes="**/*.html"
              excludes="decorators/*"/> 
  </target>

  <target name="clean">
    <delete dir="docs"/>
  </target>

</project>
